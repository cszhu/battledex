{
  "manifest_version": 2,
  "name": "Battledex",
  "version": "0.1.0",

  "description": "Looks up a Pokemon and displays its weaknesses and strengths",
  "icons": {
    "16": "icon.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Battledex"
  },

  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "permissions": ["http://*/"]
}
